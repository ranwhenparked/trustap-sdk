{
  "extends": "@rwp/tsconfig/internal-package.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false
  },
  "include": [
    "src/index.ts",
    "src/core.ts",
    "src/client-factory.ts",
    "src/state-machine.ts",
    "src/operations-map.ts",
    "src/security-map.ts",
    "src/schema.d.ts"
  ],
  "exclude": [
    "src/index.deno.ts",
    "src/client-deno.ts",
    "src/**/*.test.ts",
    "src/__tests__"
  ]
}
