{
  "extends": "@rwp/tsconfig/internal-package.json",
  "compilerOptions": {
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "rootDir": ".",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src",
    "scripts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}